{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "strict": true,
    "noImplicitReturns": false
  },
  "include": ["src/**/*"],
  "typeAcquisition": { "enable": true }
}
